{% extends 'base' %}
{% block content %}
from django.contrib import auth
from django.shortcuts import render, redirect

def home(request):
	if request.user.is_authenticated():
		toolbar_items = [
		{% for form in model.forms -%}
		MenuItem("{{form.display_name|title}}", "list{{form.title}}", "{{form.tooltip}}"),
		{% endfor %}
		]
		context = {"isadmin":request.user.is_superuser,"user":request.user, "toolbar_items":toolbar_items,"display_name":"{{model.app_name}}"}
		return render(request,'business_app/main.html',context)
		
	username = request.POST.get("username","")
	password = request.POST.get("password","")
	
	user = auth.authenticate(username=username, password=password)
	context = {"isadmin":request.user.is_superuser,"user":request.user}
	
	if user is not None:
		auth.login(request, user)
		return redirect('home')
	else:
		context = {"display_name":"{{model.app_name}}"}
		return render(request,'business_app/login.html',context)
		
def logout(request):
	auth.logout(request)
	context = {"display_name":"{{model.app_name}}"}
	return render(request, 'business_app/login.html',context)
	
class MenuItem:
	def __init__(self, name, url, tooltip=""):
		self.name = name
		self.url = url
		self.tooltip = tooltip
{% endblock %}